<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MyActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/toilet_ll">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toilet: "
        android:id="@+id/toiletLabel"/>

    <TextView
        android:id="@+id/toilet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="toilet"
        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:id="@+id/urinal_ll">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urinal: "
        android:id="@+id/urinalLabel"/>

    <TextView
        android:id="@+id/urinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="urinal"
        />

        </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="refresh"
        android:id="@+id/refresh"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="i have to go"
        android:id="@+id/have_to_go"/>

</LinearLayout>
